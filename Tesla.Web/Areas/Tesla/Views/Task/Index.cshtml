@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            treeGridModel: "adjacency",
            ExpandColumn: "F_UrlAddress",
            url: "/Tesla/Task/GetGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: "主键", name: "ID", hidden: true, key: true },
                { label: '名称', name: 'Name', width: 60, align: 'left' },
                { label: '创建时间', name: 'CreateTime', width: 120, align: 'left' },
                { label: '修改时间', name: 'UpdateTime', width: 120, align: 'left', sortable: false },
                { label: '每天开始时间', name: 'StartHour', width: 100, align: 'left', sortable: false },
                { label: '每天结束时间', name: 'EndHour', width: 100, align: 'left', sortable: false },
                { label: '单注金额', name: 'SingleMoney', width: 60, align: 'left', sortable: false },
                { label: '服务端平台代码', name: 'ServerCode', width: 100, align: 'left', sortable: false },
                { label: '服务端接口', name: 'ServerApi', width: 200, align: 'left', sortable: false },
                { label: '服务端用户名', name: 'ServerUserName', width: 80, align: 'left', sortable: false },
                //{ label: '服务端用户密码', name: 'ServerUserPwd', width: 80, align: 'left', sortable: false },
                //{ label: '服务端设备', name: 'ServerDeviceType', width: 60, align: 'left', sortable: false },
                //{ label: '服务端号码个数上限', name: 'ServerMaxNumCount', width: 30, align: 'left', sortable: false },
                //{ label: '服务端号码个数下限', name: 'ServerMinNumCount', width: 30, align: 'left', sortable: false },
                { label: '客户端平台代码', name: 'ClientCode', width: 100, align: 'left', sortable: false },
                { label: '客户端接口', name: 'ClientApi', width: 200, align: 'left', sortable: false },
                { label: '客户端用户名', name: 'ClientUserName', width: 80, align: 'left', sortable: false },
                //{ label: '客户端用户密码', name: 'ClientUserPwd', width: 80, align: 'left', sortable: false },
                //{ label: '客户端设备', name: 'ClientDeviceType', width: 60, align: 'left', sortable: false },
                { label: '上次停止原因', name: 'LastStopReasonTxt', width: 100, align: 'left', sortable: false },
                {
                    label: "状态", name: "State", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == true ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.modalOpen({
            id: "Form",
            title: "修改任务",
            url: "/Tesla/Task/Form?keyValue=" + keyValue,
            width: "750px",
            height: "520px",
            btn: null
        });
    }

    function btn_disabled() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.modalConfirm("注：您确定要【停止】该项任务吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/Tesla/Task/SetState",
                    param: { keyValue: keyValue, state: 0 },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_enabled() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.modalConfirm("注：您确定要【启动】该项任务吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/Tesla/Task/SetState",
                    param: { keyValue: keyValue, state: 1 },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改任务</a></li>
                <li class="split"></li>
                <li><a id="NF-disabled" authorize="yes" onclick="btn_disabled()"><i class="fa fa-stop-circle"></i>停止</a></li>
                <li><a id="NF-enabled" authorize="yes" onclick="btn_enabled()"><i class="fa fa-play-circle"></i>启动</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
